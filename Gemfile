source 'https://rubygems.org/'

# Dependencies required for running the test suite
group :test do
  # Run automatic tasks
  gem 'rake'

  # Make the output of minitest a lot prettier
  gem 'minitest-reporters'

  # Continuously run tests after every change
  gem 'guard'
  gem 'guard-minitest'

  # Generate stats for unit test code coverage
  gem 'simplecov', require: false

  # Integrate into our coveralls.io page
  gem 'coveralls', require: false
end
